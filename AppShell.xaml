<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pmail.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Pmail.Views">

    <TabBar>
        <Tab Title="Send">
            <ShellContent ContentTemplate="{DataTemplate view:EmailPage}" />
        </Tab>
        <Tab Title="History">
            <ShellContent ContentTemplate="{DataTemplate view:EmailListPage}" />
        </Tab>
    </TabBar>
</Shell>
